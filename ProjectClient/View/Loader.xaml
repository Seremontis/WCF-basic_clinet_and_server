<local:BaseWindow  x:Class="ProjectClient.View.Loader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectClient"
        mc:Ignorable="d"
        Title="Loader" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Wybierz dotępną tabelę" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
        <ComboBox Name="NameTableCombox" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Grid.Row="0" />
        <Button x:Name="ConfirmBut" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource ButtonMediumSize}" Content="Zatwierdź" Click="ConfirmBut_Click" />
    </Grid>
</local:BaseWindow>
